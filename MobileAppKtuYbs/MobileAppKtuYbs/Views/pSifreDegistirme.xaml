        <StackLayout>
            <Label Text="Mevcut Şifreniz"
                VerticalOptions="Start" 
                HorizontalOptions="Start" />
            <Entry x:Name="txtSifre" IsPassword="True">
            </Entry>
            <Label Text="Yeni Şifreniz"
                VerticalOptions="Start" 
                HorizontalOptions="Start" />
