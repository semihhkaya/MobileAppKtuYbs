<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileAppKtuYbs.Views.pLogin">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Öğrenci No"
                VerticalOptions="Start"  />
            <Entry x:Name="txtOgrenciNo"></Entry>
            
            <Label Text="Şifre"
                VerticalOptions="Start" />
            <Entry x:Name="txtSifre" IsPassword="True"></Entry>

            <Button Text="Sisteme Giriş" Clicked="Button_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>